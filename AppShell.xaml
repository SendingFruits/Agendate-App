<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Agendate_App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Agendate_App.Views"
    xmlns:models="clr-namespace:Agendate_App.Models"
    Shell.TabBarIsVisible="False"
    BackgroundColor="#2ECC71"
    >

    <!--xmlns:views="clr-namespace:Agendate_App.Views;assembly=Mono.Android"-->
    
    <ShellContent
        Title="Inicio"
        ContentTemplate="{DataTemplate views:LoginPage}"
        FlyoutItemIsVisible="False"
        Shell.FlyoutBehavior="Disabled"
        Route="LoginPage" />

    <FlyoutItem Route="HomePage" FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent
            Title="Principal"
            Icon="{x:Static models:Icons.Dashboard}"
            ContentTemplate="{DataTemplate views:HomePage}"
            />
        <ShellContent
            Title="Reservas"
            Icon="{x:Static models:Icons.Dashboard}"
            ContentTemplate="{DataTemplate views:BookingsPage}"
            />
        <!--<ShellContent
            Title="Salir"
            Icon="{x:Static models:Icons.Dashboard}"
            ContentTemplate="{Binding OutCommand}"
            />-->

    </FlyoutItem>

    <Shell.FlyoutFooter>
        <StackLayout Padding="20">
            <Button Text="Salir" Command="{Binding SingOutCommand}" BackgroundColor="#103029"/>
        </StackLayout>
    </Shell.FlyoutFooter>
</Shell>
